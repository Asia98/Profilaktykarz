root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[*.proto]
indent_style = space
indent_size = 2

[**.graphql]
indent_style = space
indent_size = 2


[*.{js,ts,tsx}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.{jsonnet,libsonnet,json,yaml}]
indent_style = space
indent_size = 2
